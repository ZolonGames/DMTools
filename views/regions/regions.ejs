<% include ../partials/header %>

<div class="container">
    <h1 class="warp-title pageTitle">Regions</h1>
    <div class="row">
        <a href="/region/new" class="btn btn-primary btn-spacing col-md-4 mx-auto">Create New</a>
    </div>
    <div class="row">
    <% regions.forEach(function(region){ %>
        <div class="region col-sm-6 col-centered mx-auto">
            <div class="thumbnail"> 
                <img class="img-responsive" src="/img/regions/<%= region.imagePath %>" />
            </div>
            <h2><%= region.name %></h2>
            <h3 class="biome"><%= region.biome %></h3>
            <p class="region-description description"><%= region.description %></p>
            <div class="row">
                <a href="/region/<%= region._id %>/edit" class="btn btn-primary btn-region col-sm-4 mx-auto">Edit</a>
                <a href="/region/<%= region._id %>/subregions" class="btn btn-primary btn-region col-sm-4 mx-auto">Subregions</a>
            </div>
            <div class="row">
                <a href="/region/<%= region._id %>/encounters" class="btn btn-primary btn-region col-sm-8 mx-auto">Encounter Manager</a>
            </div>
        </div>
    <% }) %> 
    </div>
</div>

<% include ../partials/footer %>