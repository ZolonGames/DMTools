<% include ../../../partials/header %>

<div class="container">
    <h1>Edit: <%= encounter.name %></h1>
    <form action="/region/<%= regionID %>/subregions/<%= subID %>/encounters/<%= encounter._id %>?_method=PUT" method="POST" class="form-signin form-encounter">
    <div class="form-group">
        <label for="name">Encounter Name</label>
        <input type="text" class="form-control" id="name" name="encounter[name]" value="<%= encounter.name %>">
    </div>
    <div class="form-group">
        <label for="rarity">Encounter Rarity (Was <%= encounter.rarity %>)</label>
        <select class="form-control" name="encounter[rarity]" id="rarity">
            <option value="Common">Common</option>
            <option value="Uncommon">Uncommon</option>
            <option value="Rare">Rare</option>
            <option value="Very Rare">Very Rare</option>
            <option value="Legendary">Legendary</option>
        </select>
    </div>
    <div class="form-group">
        <label for="findDC">Encounter Find DC (Was <%= encounter.findDC %>)</label>
        <select class="form-control" name="encounter[findDC]" id="findDC" placeholder="Encounter Find DC">
            <option value="---">---</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="25">25</option>
        </select>
    </div>
    <div class="form-group">
        <label for="avoidDC">Encounter Avoid DC (Was <%= encounter.avoidDC %>)</label>
        <select class="form-control" name="encounter[avoidDC]" id="avoidDC" placeholder="Encounter Avoid DC">
            <option value="---">---</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="25">25</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Encounter Details</label>
        <textarea class="form-control" id="description" name="encounter[description]" rows="6"><%= encounter.description %></textarea>
    </div>
    <button type="submit" class="btn btn-success col-sm-6 mx-auto">Submit</button>
    </form>
    <form action="/region/<%= regionID %>/subregions/<%= subID %>/encounters/<%= encounter._id %>?_method=DELETE" method="POST" class="form-signin form-encounter">
        <button type="submit" class="btn btn-primary col-sm-6 mx-auto">Delete</button>
    </form>
</div>

<% include ../../../partials/footer %>